Host *
    #disable host key checking: avoid asking for the keyprint authenticity
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    #enable hashing known_host file
    HashKnownHosts yes
    #IdentityFile allows to specify exactly which private key I wish to use for authentification
    IdentityFile ./id_rsa
Host control01
    HostName 172.19.0.5
    User root
    Port 22
Host lb01
    HostName 172.19.0.2
    User root
    Port 22
Host app01
    HostName 172.19.0.6
    User root
    Port 22
Host app02
    HostName 172.19.0.4
    User root
    Port 22
Host db01
    HostName 172.19.0.3
    User root
    Port 22
